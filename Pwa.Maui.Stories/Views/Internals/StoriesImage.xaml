<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pwa.Maui.Stories.Views.Internals.StoriesImage"
             x:Name="parent" Orientation="Vertical">
     <Image 
        Source="{Binding Image}"
        Aspect="AspectFit"
        HeightRequest="90"
        WidthRequest="90"/>
    <Label
        Text="{Binding Text}"
        HorizontalTextAlignment="Center"
        HorizontalOptions="Center"
        IsVisible="{Binding IsDescriptionVisible,  Source={x:Reference parent}}"/>
   
</StackLayout>

